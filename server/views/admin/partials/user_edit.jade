.button-link
	a.btn.btn-default(ui-sref='users')
		i.fa.fa-chevron-left
		| &nbsp;Go Back
.panel.panel-primary
	.panel-heading Create or Edit a User
	.panel-body
		form(role='form')
			.form-group
				label(for='name') Name
				input.form-control(type='text', name='name', ng-model='user.name')
			button.btn.btn-default(type='submit') Save
